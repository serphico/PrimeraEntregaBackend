doctype html
html(lang="en") 
    include ./partials/head.pug
    body
        include  ./partials/menu.pug
        section(class="container-fluid")
            div( class="row")
                h1 Productos
                each prod in data
                    div(class="card col-3" id= prod.id)
                        img(id="thumbnailCart" src="/"+prod.thumbnail)
                        div(class="card-body")
                            h5(class="card-title" id="titleCart")= prod.title
                            p(class="card-text" id="priceCart")= prod.price
                            p(class="card-text" id="descriptionCart")= prod.description
                            span(class="card-text" id="SKUCart")= prod.SKU
                            p(class="card-text" id="stockCart")= prod.stock
                            small(id="timestampCart")= prod.timestamp
                            br
                            br
                            button(style="display:none;" class="btn btn-primary" id="X"+prod.id onclick="closeUpdate("+prod.id+")") X
                            form( style="display:none;" id="update"+prod.id onsubmit="return updateProduct(this,"+prod.id+")" enctype="multipart/form-data")
                                div(class="mb-3")
                                    label(for="title" class="form-label") Nombre del producto
                                    input(type="text" class="form-control form-control-sm" id="title" name="title")

                                div(class="mb-3")
                                    label(for="price" class="form-label") Precio del producto
                                    input(type="number" class="form-control form-control-sm" id="price" name="price")

                                div(class="mb-3")
                                    label(for="SKU" class="form-label") SKU
                                    input(type="text" class="form-control form-control-sm" id="SKU" name="SKU")

                                div(class="mb-3")
                                    label(for="stock" class="form-label") Stock
                                    input(type="number" class="form-control form-control-sm" id="stock" name="stock")

                                div(class="mb-3")
                                    label(for="thumbnail" class="form-label") Foto del producto
                                    input(class="form-control form-control-sm" id="thumbnail" name="thumbnail" type="file")

                                div(class="mb-3")
                                    label(for="description" class="form-label") Descripci√≥n del producto
                                    textarea(class="form-control form-control-sm" name="description" id="description" cols="30" rows="10")

        
                                input(type="submit" class="btn btn-primary" value="Enviar")
                        button(class="btn btn-primary" onclick="updateProd("+prod.id+")") Actualizar
                        button(class="btn btn-primary" onclick="deleteProd("+prod.id+")") Eliminar
                        button(class="btn btn-primary" onclick="addCart("+prod.id+")") Agregar al carrito
    script(src="/js/updateProd.js") 